# ─── Builder Stage ────────────────────────────────────────────────────────────
FROM {{ base_image }} AS builder

ENV DEBIAN_FRONTEND=noninteractive
ENV ROS_DISTRO={{ ros_distro }}
ENV ROS_WS=/ros_ws

# Install core build tools …
RUN apt-get update && apt-get install -y \
    git \
    python3-colcon-common-extensions \
    sudo \
    curl \
    gnupg2 \
    lsb-release \
    udev \
    cmake \
    python3-rosdep \
    python3-vcstool \
    build-essential && \
    rm -rf /var/lib/apt/lists/*

# Copy in the component’s source tree
WORKDIR /
COPY {{ comp_src }} /ros_ws/src

{% if common_pkgs %}
# ─── Copy in shared/common packages ─────────────────────────────────────────
{% for pkg in common_pkgs %}
# shared package: {{ pkg.name }}
COPY common_packages/{{ pkg.name }} /ros_ws/src/{{ pkg.name }}
{% endfor %}
{% endif %}

# Pre-install hooks (if any) …
{% if preinstall %}
{% for cmd in preinstall %}
COPY {{ cmd.src }} {{ cmd.dest }}
RUN chmod +x {{ cmd.dest }} && {{ cmd.dest }}
{% endfor %}
{% endif %}

# Install ROS deps & build…
WORKDIR /ros_ws
RUN bash -lc "\
    apt-get update && \
    source /opt/ros/${ROS_DISTRO}/setup.bash && \
    rosdep update && \
    rosdep install --from-paths src --ignore-src -y && \
    rm -rf /var/lib/apt/lists/* "

